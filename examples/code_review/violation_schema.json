{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Code Review Violations",
  "type": "object",
  "properties": {
    "violations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file": {
            "type": "string",
            "description": "File path relative to repository root"
          },
          "line": {
            "type": "integer",
            "description": "Line number in the new file (+ side of diff)",
            "minimum": 1
          },
          "rule_id": {
            "type": "string",
            "description": "Rule identifier (e.g., ETS001_DOC_PUBLIC_API)"
          },
          "message": {
            "type": "string",
            "description": "Short, specific explanation of the violation"
          }
        },
        "required": ["file", "line", "rule_id", "message"]
      }
    }
  },
  "required": ["violations"]
}
