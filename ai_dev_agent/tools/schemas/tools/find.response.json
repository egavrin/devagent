{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "files": {
      "type": "array",
      "description": "List of file matches with optional metadata",
      "items": {
        "oneOf": [
          {"type": "string"},
          {
            "type": "object",
            "properties": {
              "path": {"type": "string"},
              "score": {"type": "number"},
              "lines": {"type": "integer"},
              "size_bytes": {"type": "integer"},
              "mtime": {"type": "string"}
            },
            "required": ["path"],
            "additionalProperties": false
          }
        ]
      }
    },
    "error": {
      "type": "string",
      "description": "Error message if search failed"
    }
  },
  "required": ["files"],
  "additionalProperties": true
}
