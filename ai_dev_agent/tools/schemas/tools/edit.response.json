{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "edit response",
  "type": "object",
  "required": ["success", "changes_applied"],
  "properties": {
    "success": {
      "type": "boolean",
      "description": "Whether all changes were successfully applied"
    },
    "changes_applied": {
      "type": "integer",
      "description": "Number of patch actions (add/update/delete/move) successfully applied"
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of error messages for failed blocks"
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of warning messages"
    },
    "changed_files": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of files that were modified"
    },
    "new_files": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of new files that were created"
    },
    "diff_stats": {
      "type": "object",
      "description": "Statistics about changes (for unified diff format)",
      "properties": {
        "lines_added": {
          "type": "integer",
          "description": "Number of lines added"
        },
        "lines_removed": {
          "type": "integer",
          "description": "Number of lines removed"
        }
      }
    }
  },
  "additionalProperties": false
}
