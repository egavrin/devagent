{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "matches": {
      "type": "array",
      "description": "Matches grouped by file",
      "items": {
        "type": "object",
        "properties": {
          "file": {
            "type": "string",
            "description": "File path"
          },
          "matches": {
            "type": "array",
            "description": "Matches in this file",
            "items": {
              "type": "object",
              "properties": {
                "line": {
                  "type": "integer",
                  "description": "Line number"
                },
                "text": {
                  "type": "string",
                  "description": "Matched line content"
                }
              },
              "required": ["line", "text"],
              "additionalProperties": false
            }
          }
        },
        "required": ["file", "matches"],
        "additionalProperties": false
      }
    },
    "error": {
      "type": "string",
      "description": "Error message if search failed"
    }
  },
  "required": ["matches"],
  "additionalProperties": true
}
