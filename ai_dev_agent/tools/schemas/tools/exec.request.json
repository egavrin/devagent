{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "exec request",
  "type": "object",
  "required": ["cmd"],
  "properties": {
    "cmd": { "type": "string" },
    "args": {
      "type": "array",
      "items": { "type": "string" }
    },
    "cwd": { "type": "string" },
    "timeout_sec": { "type": "number", "minimum": 0 },
    "env": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  },
  "additionalProperties": false
}
