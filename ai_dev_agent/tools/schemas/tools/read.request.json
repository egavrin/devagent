{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "read request",
  "type": "object",
  "properties": {
    "paths": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "path": {
      "type": "string",
      "description": "Single file path to read (alias for 'paths')"
    },
    "byte_range": {
      "type": "array",
      "items": { "type": "integer", "minimum": 0 },
      "minItems": 2,
      "maxItems": 2
    },
    "context_lines": {
      "type": "integer",
      "minimum": 0
    }
  },
  "anyOf": [
    {"required": ["paths"]},
    {"required": ["path"]}
  ],
  "additionalProperties": false
}
