{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://devagent.ai/schemas/react_step.json",
  "title": "ReActStep",
  "type": "object",
  "required": ["action", "observation", "metrics", "evaluation", "step_index"],
  "properties": {
    "action": {
      "$ref": "./react_action.json"
    },
    "observation": {
      "$ref": "./react_observation.json"
    },
    "metrics": {
      "type": "object",
      "additionalProperties": true
    },
    "evaluation": {
      "type": "object",
      "required": ["gates", "should_stop", "status"],
      "properties": {
        "gates": {
          "type": "object",
          "additionalProperties": {
            "type": "boolean"
          }
        },
        "should_stop": {
          "type": "boolean"
        },
        "stop_reason": {
          "type": ["string", "null"]
        },
        "next_action_hint": {
          "type": ["string", "null"]
        },
        "improved_metrics": {
          "type": "object",
          "additionalProperties": true
        },
        "status": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "step_index": {
      "type": "integer",
      "minimum": 0
    }
  },
  "additionalProperties": true
}
